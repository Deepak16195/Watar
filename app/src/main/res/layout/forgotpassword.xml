<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/tabColor"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Forgot Password"
        android:textColor="@color/tabl_backColor"
        android:textSize="18sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue">

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_condensed_regular"
            android:hint="Enter Registered Mobile No."
            android:inputType="number"
            android:maxLength="8"
            android:textColorHint="#3d3e40"
            android:textSize="13dp"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Textline" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#3d3e40"
        android:gravity="center"
        android:padding="15dp"
        android:stateListAnimator="@null"
        android:text="GET OTP"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>